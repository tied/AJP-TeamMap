<form id="relation-form" class="aui top-label" style="padding:10px;">
	<div class="aui-group">
		<div class="aui-item" style="width:40%">
			<div class="field-group">
		        <label for="title">Title
		            <span class="aui-icon icon-required">(required)</span></label>
		        <input class="text full-width-field" type="text"
		               id="relation-title" placeholder="Relation Title">
	    	</div>
		</div>
		<div class="aui-item" style="width:60%">
			<div class="field-group">
		        <label for="description">Description
		            <span class="aui-icon icon-required">(required)</span></label>
		        <input class="text full-width-field" type="text"
		               id="relation-description" placeholder="A Description">
	    	</div>
		</div>
		
	</div>
	<div class="aui-group">
		<div class="aui-item" style="width:7%;">
			<div class="field-group">
		        <input class="text full-width-field"  style="border-radius:3px 0px 0px 3px" type="text" disabled="" placeholder="John" >
	    	</div>
		</div>
		<div class="aui-item" style="width:20%; padding-left:0px">
			<div class="field-group">
		        <input class="text full-width-field" type="text" style="border-radius:0px"
		               id="relation-phrase" placeholder="Phrase">
	    	</div>
		</div>
		<div class="aui-item" style="width:7%;  padding-left:0px">
			<div class="field-group">
		        <input class="text full-width-field" style="border-radius:0px 3px 3px 0px" type="text" disabled="" placeholder="Jane">
	    	</div>
		</div>
		<div class="aui-item" style="width:7%;">
			<div class="field-group">
		  		<input class="text full-width-field" style="border-radius:3px 0px 0px 3px" type="text" disabled="" placeholder="Jane">
	    	</div>
		</div>
		<div class="aui-item" style="width:20%;padding-left:0px">
			<div class="field-group">
		  		<input class="text full-width-field" type="text" style="border-radius:0px"
		               id="relation-reverse-phrase" placeholder="A Reverse Phrase">
	    	</div>
		</div>
		<div class="aui-item" style="width:7%;padding-left:0px">
			<div class="field-group">
		  		<input class="text full-width-field" style="border-radius:0px 3px 3px 0px" type="text" disabled="" placeholder="John">
	    	</div>
		</div>
		<div class="aui-item" style="width:22%" id="sync-single-select-container-form">
			<div class="field-group">
			    <select class="select full-width-field" id="relation-color">
			        <option value="0">green</option>
			        <option value="1">red</option>
			        <option value="2">yellow</option>
			        <option value="3">blue</option>
			        <option value="4">brown</option>
			        <option value="5">gray</option>
			    </select>
			</div>
		</div>
		<div class="aui-item" style="width:10%">
			<div class="buttons-container">
		        <div class="buttons">
		            <input class="button submit" type="submit" value="Add+" id="add-relation">
		        </div>
		    </div>
		</div>
	</div>
    
</form>
